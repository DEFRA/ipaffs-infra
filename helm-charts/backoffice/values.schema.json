{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "azure": {
      "type": "object",
      "required": [
        "location"
      ]
    },
    "database": {
      "type": "object",
      "required": [
        "enabled"
      ]
    },
    "image": {
      "type": "string"
    },
    "ingress": {
      "type": "object",
      "required": [
        "hosts"
      ]
    },
    "redis": {
      "type": "object",
      "required": [
        "enabled"
      ]
    },
    "serviceBus": {
      "type": "object",
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "secretStore": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "externalSecret": {
      "type": "object",
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "refreshInterval": {
          "type": "string"
        },
        "secrets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "secretKey": {
                "type": "string"
              },
              "remoteKey": {
                "type": "string"
              }
            },
            "required": [
              "secretKey",
              "remoteKey"
            ]
          }
        }
      }
    }
  },
  "required": [
    "environment"
  ],
  "title": "Values",
  "type": "object"
}
